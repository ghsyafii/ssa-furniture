<!doctype html>
<html lang="en">

<%- include('./partials/head.ejs')%>

<%- include('./partials/nav.ejs')%>

<body>
<div class="container text-center centered">
    <div class="row">
        <div class="col-lg-6 mx-auto">
<form action="/users/register" method="POST" class="form-signin">
    <!--    <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">-->
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <%- include('./partials/messages') %>

    <label for="name" class="sr-only">Name</label>
        <input type="name" id="name" name="name" class="form-control" placeholder="Name" value="<% typeof name != 'undefined' ? name : '' %>" required autofocus>
    <br>
        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" value="<% typeof email != 'undefined' ? email : '' %>" required>
    <br>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="<% typeof password != 'undefined' ? password : '' %>" required>
    <br>
    <button class="btn btn-warning btn-block" type="submit">Register</button>
</form>
<p class="mt-3">Have an account? <a href="/users/login">Login</a></p>


    <%- include('./partials/scripts.ejs')%>
</div>
    </div>
</div>
</body>
</html>